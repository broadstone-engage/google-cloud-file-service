{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,

    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "inlineSources": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",        
    "types": [
        "node"
    ]
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}